{
	"name": "simple-cache",
	"version": "0.0.1",
	"description": "Cache any data-type within a given ttl, with automatic invalidation.",
	"author": {
		"name": "Chukwuma Nwaugha",
		"email": "nwaughac@gmail.com",
		"url": "https://nwaughachukwuma.github.io/portfolio"
	},
	"license": "MIT",
	"type": "module",
	"main": "./index.ts",
	"types": "./dist/index.d.ts",
	"exports": "./dist/index.js",
	"keywords": [
		"cache",
		"caching",
		"optimize",
		"performance",
		"ttl",
		"expire"
	],
	"files": [
		"./dist/index.js",
		"./dist/index.d.ts"
	],
	"scripts": {
		"tsc": "tsc",
		"move-tsd": "cp index.test-d.ts ./dist/index.test-d.ts",
		"clean-tsd": "rm ./dist/index.test-d.ts",
		"tsd": "yarn move-tsd && tsd && yarn clean-tsd",
		"test": "ava && yarn tsd"
	},
	"devDependencies": {
		"ava": "^3.15.0",
		"delay": "^5.0.0",
		"tsd": "^0.17.0",
		"typescript": "^4.4.3"
	}
}
